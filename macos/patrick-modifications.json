            ]
          }]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "o",
            "modifiers": {
              "mandatory": [
                "left_option",
                "shift"
              ]
            }
          },
          "to": [{
            "key_code": "right_arrow",
            "modifiers": [
              "shift",
              "command"
            ]
          }]
        }
      ]
    }
  ]
}